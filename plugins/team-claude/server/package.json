{
  "name": "@team-claude/server",
  "version": "0.1.0",
  "description": "Team Claude local server for orchestrating Worker Claude instances",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile team-claude-server",
    "build:global": "mkdir -p ~/.claude && bun build src/index.ts --compile --outfile ~/.claude/team-claude-server",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "hono": "^4.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  }
}
