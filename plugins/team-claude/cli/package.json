{
  "name": "tc",
  "version": "0.1.0",
  "description": "Team Claude CLI - 프로젝트 관리 및 테스트 도구",
  "type": "module",
  "bin": {
    "tc": "./dist/tc"
  },
  "scripts": {
    "build": "bun build src/index.ts --compile --outfile dist/tc",
    "dev": "bun run src/index.ts",
    "typecheck": "tsc --noEmit",
    "test": "bun test",
    "test:psm": "bun test src/test/psm-hooks.test.ts"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "gray-matter": "^4.0.3",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.3.0"
  }
}
